{
  "type": "VerticalLayout",
  "options": {
    "formWidth": "80%"
  },
  "elements": [
    {
      "type": "Group",
      "label": "Input Files",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/mib_path"
            },
            {
              "type": "Control",
              "scope": "#/properties/iBF"
            }
          ]
        }
      ]
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Group",
              "label": "Reshape Options",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/reshape_option"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/Scan_X"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/Scan_Y"
                }
              ]
            },
            {
              "type": "Group",
              "label": "Pixel Binning",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/bin_sig_factor"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/bin_nav_factor"
                }
              ]
            }
          ]
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Group",
              "label": "Configs for PtyREX",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/create_json"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/ptycho_config",
                  "rule": {
                    "effect": "DISABLE",
                    "condition": {
                      "scope": "#/properties/create_json",
                      "schema": {
                        "const": false
                      }
                    }
                  }
                },
                {
                  "type": "Control",
                  "scope": "#/properties/ptycho_template",
                  "rule": {
                    "effect": "DISABLE",
                    "condition": {
                      "scope": "#/properties/create_json",
                      "schema": {
                        "const": false
                      }
                    }
                  }
                }
              ]
            },
            {
              "type": "Group",
              "label": "Resource and Debug Settings",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/nprocs"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/memory"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/DEBUG"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
